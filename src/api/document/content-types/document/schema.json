{
  "kind": "collectionType",
  "collectionName": "documents",
  "info": {
    "singularName": "document",
    "pluralName": "documents",
    "displayName": "Document",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string",
      "required": false,
      "default": "Anonymous"
    },
    "collector": {
      "type": "string",
      "default": "Anonymous"
    },
    "documentType": {
      "type": "string",
      "required": true
    },
    "language": {
      "type": "string",
      "required": true,
      "default": "Indonesian"
    },
    "yearWritten": {
      "type": "integer",
      "max": 3000
    },
    "locationWritten": {
      "type": "string"
    },
    "ink": {
      "type": "string"
    },
    "illumination": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "required": false,
      "maxLength": 2000
    },
    "file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files"
      ]
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "contributor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "documents"
    },
    "bookmarkBy": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "bookmarks"
    },
    "viewedBy": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "history"
    }
  }
}
